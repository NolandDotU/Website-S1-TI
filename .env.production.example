# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env and fill in actual values
# NEVER commit .env file to version control

# ========================================
# Node.js & Application
# ========================================
NODE_ENV=production
PORT=5000

# ========================================
# Database Configuration (MongoDB)
# ========================================
# IMPORTANT: Use strong, randomly generated passwords (minimum 16 characters)
# Generate: openssl rand -base64 32
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_very_strong_password_here_min_16_chars
MONGO_INITDB_DATABASE=db_website_TI

# ========================================
# Redis Cache Configuration
# ========================================
REDIS_URL=redis://redis:6379

# ========================================
# JWT Configuration
# ========================================
# Generate: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_min_32_chars
JWT_EXPIRE=1d
JWT_REFRESH_EXPIRE=3d

# ========================================
# Google OAuth Configuration
# ========================================
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://yourdomain.com/api/v1/auth/google/callback

# ========================================
# Frontend Configuration
# ========================================
FRONTEND_ORIGIN=https://yourdomain.com
CORS_ORIGIN=https://yourdomain.com

# ========================================
# API Configuration
# ========================================
API_TIMEOUT=30000
LOG_LEVEL=info

# ========================================
# OpenRouter API (for AI features)
# ========================================
OPENROUTER_API_KEY=your_openrouter_api_key
OPENROUTER_MODEL=your_model_name
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# ========================================
# Docker/Nginx Configuration
# ========================================
NGINX_PORT=80
